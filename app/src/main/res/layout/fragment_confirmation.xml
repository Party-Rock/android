<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/house_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="@string/venue_image"
                android:scaleType="centerInside"
                android:src="@drawable/house_for_show" />


            <TextView
                android:id="@+id/text_view_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:padding="5dp"
                android:text="@string/txt_view_string_price"
                android:textColor="#000"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/text_view_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:padding="5dp"
                android:text="@string/txt_view_string_room"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/house_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:text="Description Sample "
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@color/green"
        android:text="@string/rent"
        android:textColor="@color/white"/>


</FrameLayout>