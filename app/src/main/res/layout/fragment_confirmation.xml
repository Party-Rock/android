<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">


            <ImageView
                android:id="@+id/img_venue_main"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="@string/venue_image"
                android:scaleType="centerCrop"
                android:src="@drawable/house_for_show"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>


            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="5dp"
                android:text="@string/price"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>


            <TextView
                android:id="@+id/txt_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="5dp"
                android:text="@string/people"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/txt_venue_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/style_text_border"
                android:text="@string/description_sample"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@color/green"
        android:text="@string/rent"
        android:textColor="@color/white"/>

</FrameLayout>