<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <ImageView
        android:id="@+id/house_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/house_image"
        android:scaleType="centerCrop"
        android:src="@drawable/house_for_show"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_border"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/sample_cost"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/room_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_border"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/capacity"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_border"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/sample_distance"
            android:textSize="22sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_rent"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/green"
        android:text="@string/rent"
        android:textColor="@color/white"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/venue_rating"
        android:numStars="5"
        android:background="@color/white"/>


</android.support.v7.widget.CardView>